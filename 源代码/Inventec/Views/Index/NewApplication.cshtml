@model IEnumerable<PorscheBPM.Models.SecMenu>
@{
    ViewBag.Title = "NewApplication";
    Layout = "~/Views/Shared/_ListLayout.cshtml";
}

<div class="col-md-12 col-lg-12 col-xl-12">
    <div class="row applicationpanel">
        @foreach (var item in Model)
        {
            <div class="col-md-12 col-lg-12 col-xl-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="icon-reorder"></i> @(Session["Lang"] == "zh-CN" ? item.displayname : item.menuname)</h3>
                    </div>
                    <div class="panel-body form-icon">
                        @foreach (var submenu in item.sec_menu1 as IEnumerable<PorscheBPM.Models.SecMenu>)
                        {
                            <div>
                                <a href="@submenu.url" target="_blank">
                                    <div class="icon">
                                     <img src="~/Themes/Images/icon_@(submenu.id).png" />
                                    </div>
                                    <span>@(Session["Lang"] == "zh-CN" ? submenu.displayname : submenu.menuname)</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>